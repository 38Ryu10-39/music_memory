<div class="card content-card border-left col-sm-12 col-md-10 offset-md-1 col-lg-5 position-relative m-1">
  <div class="my-4 text-center">
    <%= link_to post.music_name, post_path(post), class: "fs-3" %>
  </div>
  <div class="card-body">
    <div>
      <%= post.user.name %>
    </div>
    <div>
      <%= post.age_group_i18n %>
    </div>
    <div>
      <%= post.memory %>
    </div>
    <div>
      <%= "#{post.prefecture.name}" if post.prefecture.present? %>
    </div>
  </div>
  <div class="position-absolute bottom-0 end-0">
    <%= render 'posts/crud_menu', post: post %>
  </div>
</div>