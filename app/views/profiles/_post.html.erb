<div class="card content-card border-left position-relative">
  <div class="m-2 text-center">
    <%= link_to post.music_name, post_path(post), class: "fs-1" %>
  </div>
  <div class="card-body">
    <div>
      <%= post.user.name %>
    </div>
    <div>
      <%= post.age_group_i18n %>
    </div>
    <div>
      <%= post.memory %>
    </div>
    <div>
      <%= "#{post.prefecture.name}" if post.prefecture.present? %>
    </div>
  </div>
  <%= render 'posts/crud_menu', post: post %>
</div>