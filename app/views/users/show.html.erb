<% breadcrumb :users_show, @user %>
<% content_for(:title, t('.title', user: @user.name)) %>
<div class="container">
  <div class="row">
    <div class="text-center">
      <h1 class="mt-3 mb-3"><%= t('.title', user: @user.name) %></h1>
      <div class="row d-flex justify-content-evenly">
        <div class="card p-3 col-12 col-md-10 text-center col-lg-4">
          <%= render "user", user: @user %>
          <div id="js-follow-button-<%= @user.id %>" class="m-3">
            <%= render 'relationships/follow', user: @user %>
          </div>
          <div class="m-3">
            <%= render 'rooms/chatroom', user: @user, is_room: @is_room, room_id: @room_id, room: @room, user_room: @user_room, my_user_room: @my_user_room %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>