<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: comment, url: [post, comment], id: 'new_comment', local: false do |f| %>
      <div id="js-comment-create-error">
        <%= render 'shared/error_messages', object: f.object %>
      </div>
      <div class="form-group row">
        <div id="comments-amount">
          <p><%= comments.count %>件のコメント</p>
        </div>
        <div>
          <div class="input-group">
            <%= f.text_field :body, class: 'form-control mr-3', id: "js-comment-create-body", row: 4, placeholder: 'コメント' %>
            <div class="input-group-append">
              <%= f.submit t('posts.show.comment_submit'), class: 'btn btn-orange' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>